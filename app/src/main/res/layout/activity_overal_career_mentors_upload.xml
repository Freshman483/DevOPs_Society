<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="nestedScrollPost"
    tools:context=".mains.OverallCareerMentorsUpload">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/paddingSmall"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:id="@+id/circleImageCareerAndMentorsInIT"
            android:layout_height="110dp"
            android:onClick="functionUploadImageCarerMentorCircleImageView"
            android:scaleType="centerCrop"
            android:src="@color/black"
            app:civ_border_color="@color/teal_700"
            app:civ_border_width="2dp" />


        <EditText
            android:id="@+id/editTextCareerOrMentorHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingSmall"
            android:hint="Enter Heading"
            android:textSize="25sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/EditTextCareerOrMentorDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/paddingSmall"
            android:hint="Enter Career Description"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonSubmitPosting"
            android:text="Submit Posting"
            android:onClick="functionButtonSubmitClicked"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>