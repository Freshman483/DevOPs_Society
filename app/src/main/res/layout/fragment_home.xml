<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_gradient_list">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/RelativeLayoutHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animation_gradient_list">

            <ImageView
                android:id="@+id/image_view_show_animation_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/button_proceed_home_fragment"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/button_proceed_home_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:drawableEnd="@drawable/ic_baseline_touch_app_here"
                android:drawableTint="@color/purple_700"
                android:gravity="center_horizontal"
                android:text="EXPLORE MORE FEATURES"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>